<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Roulette</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
  <h1>Roulette</h1>
  <section class="container">
    <div class="board green"> <p>1</p> </div>
    <div class="board black"> <p>2</p> </div>
    <div class="board green"> <p>3</p> </div>
    <div class="board black"> <p>4</p> </div>
    <div class="board green"> <p>5</p> </div>
    <div class="board black"> <p>6</p> </div>
    <div class="board mid"> <p>0</p> </div>
    <div class="board green"> <p>7</p> </div>
    <div class="board black"> <p>8</p> </div>
    <div class="board green"> <p>9</p> </div>
    <div class="board black"> <p>10</p> </div>
    <div class="board green"> <p>11</p> </div>
    <div class="board black"> <p>12</p> </div>
  </section>

  <section class="inputSection">
    <section class="contain bank">
      <h2>Bank</h2>
      <p>$<span class="userBank">1,000</span></p>
    </section>
    <section class="contain inputs">
      <h2>Bets</h2>
      <input id="placedBet" type="text" name="" value="" placeholder="Place your bet here">

      <select class="colors" name="">
        <option value="Green">Green</option>
        <option value="Black">Black</option>
        <option value="Red">Red</option>
      </select>
      <button id="betClick" type="button" name="button">Place Bet</button>

    </section>
    <section class="contain displayResult">
      <h2>Result</h2>
        <p class="result"></p>
    </section>
  </section>

  <script src="main.js" type="text/javascript">

  </script>
  </body>
</html>


